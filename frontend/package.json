{
  "version": "1.23.1",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production FORCE_COLOR=1 bun run --filter './packages/*' --filter './apps/*' build",
    "dev": "NODE_ENV=development FORCE_COLOR=1 bun run --filter @intric/web --filter @intric/ui dev",
    "lint": "FORCE_COLOR=1 bun run --filter '*' lint",
    "check": "NODE_ENV=production FORCE_COLOR=1 bun run --filter '*' check",
    "format": "FORCE_COLOR=1 bun run --filter '*' format",
    "setup": "sh setup.sh",
    "setup:github": "GITHUB=TRUE sh setup.sh"
  },
  "packageManager": "bun@1.2.23",
  "engines": {
    "node": ">=18"
  },
  "resolutions": {
    "cookie": "0.7.2",
    "esbuild": ">0.25.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
