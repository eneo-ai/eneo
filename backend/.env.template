# ----------------------------------------------------------------------------
# Background Worker Configuration
# ----------------------------------------------------------------------------
# Controls ARQ worker pool behavior and per-tenant concurrency fairness
# Prevents "noisy neighbor" where one tenant monopolizes all worker slots
# ----------------------------------------------------------------------------
# [OPTIONAL] Max concurrent jobs across all tenants (default: 20)
# Memory impact: Each job uses 100-500MB depending on task (crawl vs upload)
# Recommendation: 10-15 for <8GB RAM, 20+ for 16GB+ RAM
WORKER_MAX_CONCURRENT_JOBS=20

# [OPTIONAL] Max concurrent jobs per tenant (default: 4)
# Prevents one tenant from monopolizing worker slots
# Set to 0 to disable (not recommended for multi-tenant)
TENANT_WORKER_CONCURRENCY_LIMIT=4

# [OPTIONAL] Semaphore TTL - auto-cleanup for crashed workers
# Keep >= crawl_max_length so long crawls never drop their semaphore key
TENANT_WORKER_SEMAPHORE_TTL_SECONDS=36100

# [NEW] Crawl Job Age Limit - Prevents infinite retry loops
# Jobs permanently fail if still retrying after this duration
# CRITICAL: Protects against cascading failures during burst crawl periods (e.g., 2 AM auto-crawls)
# Default: 1800 seconds = 30 minutes
CRAWL_JOB_MAX_AGE_SECONDS=1800

# [NEW] Crawl Feeder - Prevents burst overload (OPTIONAL FEATURE)
# The feeder service meters job enqueue rate to prevent overwhelming the worker queue
# when schedulers trigger (e.g., 48 websites at 2 AM causing retry storms)

# [OPTIONAL] Enable feeder service (default: false for gradual rollout)
# When enabled: Scheduler adds jobs to pending queue, feeder enqueues when capacity exists
# When disabled: Scheduler enqueues directly to ARQ (original behavior)
CRAWL_FEEDER_ENABLED=false

# [OPTIONAL] Feeder check interval (default: 10 seconds)
# How often the feeder checks for pending jobs and available capacity
CRAWL_FEEDER_INTERVAL_SECONDS=10

# [OPTIONAL] Feeder batch size (default: 10 jobs per cycle)
# Maximum jobs to enqueue per tenant per feeder cycle
# Prevents enqueueing entire queue at once if large capacity suddenly becomes available
CRAWL_FEEDER_BATCH_SIZE=10

# [OPTIONAL] Orphan crawl run cleanup timeout (default: 6 hours)
# Marks stuck QUEUED/IN_PROGRESS crawl runs as FAILED after this duration
# Prevents "Crawl already in progress" blocking new crawls for stale records
# Higher values are safer for large websites; lower values provide faster cleanup
# Range: 1-24 hours recommended
ORPHAN_CRAWL_RUN_TIMEOUT_HOURS=6

# [OPTIONAL] Safe preemption threshold for user-initiated recrawls (default: 30 minutes)
# When a user triggers a recrawl but an existing job is QUEUED/IN_PROGRESS:
#   - If the job's last activity (updated_at) is OLDER than this threshold: job is considered "stale"
#     → Stale job is marked FAILED and a new crawl is started immediately
#   - If the job's last activity is NEWER than this threshold: job is considered "active"
#     → User gets "Crawl already in progress" error (job is legitimately running)
# The worker sends a "heartbeat" every N pages (see CRAWL_HEARTBEAT_INTERVAL) to keep the job alive.
# This allows users to immediately retry crashed/stuck crawls without waiting hours
# 30 minutes is safe for most websites; increase if you have very large sites (>5000 pages)
CRAWL_STALE_THRESHOLD_MINUTES=30

# [OPTIONAL] Heartbeat interval for crawl jobs (default: 300 seconds = 5 minutes)
# During a crawl, the worker updates the job's updated_at timestamp periodically.
# This "heartbeat" signals the job is still alive, preventing false-positive staleness detection.
# TIME-BASED (not count-based) to handle slow-loading pages correctly.
# Should be significantly less than CRAWL_STALE_THRESHOLD_MINUTES (30 min default).
# Lower values = more frequent heartbeats = more accurate (but more DB writes)
CRAWL_HEARTBEAT_INTERVAL_SECONDS=300

